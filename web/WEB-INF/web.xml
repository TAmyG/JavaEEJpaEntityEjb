<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Registro</servlet-name>
        <servlet-class>controller.Registro</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MostrarTodo</servlet-name>
        <servlet-class>controller.MostrarTodo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteEdit</servlet-name>
        <servlet-class>controller.DeleteEdit</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Editar</servlet-name>
        <servlet-class>controller.Editar</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Registro</servlet-name>
        <url-pattern>/registrarpersona.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MostrarTodo</servlet-name>
        <url-pattern>/mostrartodo.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteEdit</servlet-name>
        <url-pattern>/editareliminar.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Editar</servlet-name>
        <url-pattern>/editarpersona.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>crearPersona.jsp</welcome-file>
    </welcome-file-list>
</web-app>
